<div class="container">
  <div class="sign_field pages">
    <h5>新しいアカウントを作成</h5>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field sign_form">
        <span class="btn btn-danger btn-sm disabled">必須</span>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名" %>
      </div>
      
      <div class="field sign_form">
        <span class="btn btn-danger btn-sm disabled">必須</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
      </div>
    
      <div class="field sign_form">
        <span class="btn btn-danger btn-sm disabled">必須</span>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
      </div>
    
      <div class="field sign_form">
        <span class="btn btn-danger btn-sm disabled">必須</span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード確認" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class:"btn btn-primary input_submit col-sm-8" %>
      </div>
    <% end %>
    
    <p><%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path %></p>
      
  </div>
</div>

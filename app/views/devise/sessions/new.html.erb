<div class="container">
  <div class="user_container">
    <div class="sign_field pages">
      <h5>ログイン</h5>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field sign_form">
          <span class="btn btn-danger btn-sm disabled">必須</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
        </div>
  
        <div class="field sign_form">
          <span class="btn btn-danger btn-sm disabled">必須</span>
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード" %>
        </div>
  
        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary input_submit col-sm-8" %>
        </div>
      <% end %>
      <p><%= link_to "新しいアカウントを作成", new_user_registration_path %></p>
    </div>
  </div>
</div>

